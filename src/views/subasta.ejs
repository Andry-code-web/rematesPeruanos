<body>
  <%- include('componentes/header') %>
  <main>

    <section class="contenedor_titulo_subastas">
      <h1 class="titulo"><%= subasta.categoria %></h1>
      <div class="informacion_casa">
        <h2><%= subasta.ubicacion %></h2>
      </div>
      <div class="info_inmueble">
        <div class="precio">
          <p>
            <span>Precio base</span>
            <span>
              $<%= subasta.precios %>
            </span>
          </p>
        </div>
        <div class="distrito">
          <p>
            <span>Fecha del remate</span>
            <span>
              <%= subasta.fecha_remate %>
            </span>
          </p>
        </div>
        <div class="pisos">
          <p>
            <span>Hora del remate</span>
            <span>
              <%= subasta.hora_remate %>
            </span>
          </p>
        </div>
        <div class="tamaño">
          <p>
            <span>Mt2</span>
            <span>
              <%= subasta.tamaño_propiedad %>
            </span>
          </p>
        </div>

      </div>
    </section>

    <section class="imagen">
      <div class="contenendor_img">
        <img src="/img/casa3.jfif" alt="">
        <img src="/img/casa3.jfif" alt="">
      </div>
    </section>

    <section class="descripcion">
      <div class="contenedor_descripcion">
        <div class="texto_info">
          <p class="about_subtitle"></p>
          <p class="about_descripcion"></p>
        </div>
        <div class="info_casa">
          <div class="info">
            <span>
              <i class="ri-home-2-line"></i>
              <p>cosina</p>
            </span>
          </div>
          <div class="info">
            <span>
              <i class="ri-home-2-line"></i>
              <p>patio</p>
            </span>
          </div>
          <div class="info">
            <span>
              <i class="ri-home-2-line"></i>
              <p>pisina</p>
            </span>
          </div>
          <div class="info">
            <span>
              <i class="ri-home-2-line"></i>
              <p>comedor</p>
            </span>
          </div>
          <div class="info">
            <span>
              <i class="ri-home-2-line"></i>
              <p>labanderia</p>
            </span>
          </div>
        </div>
      </div>
    </section>

    <section class=""></section>

    <section class=""></section>

