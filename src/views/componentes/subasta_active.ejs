<!-- Estado: Activo - Permite enviar ofertas -->
<div class="auction-card active-state">
    <div class="auction-header">
      <h2>Subasta #<%= remate.id %></h2>
      <span class="status-badge active">Activo</span>
    </div>
    
    <div class="auction-info">
      <p class="price">Precio base: $<%= remate.precios.toLocaleString() %></p>
      <p class="location"><i class="fas fa-map-marker-alt"></i> <%= remate.ubicacion %></p>
      <p class="description"><%= remate.descripcion %></p>
    </div>
  
    <div class="auction-form">
      <form id="offerForm" data-remate-id="<%= remate.id %>">
        <div class="input-group">
          <input 
            type="number" 
            id="montoOferta" 
            name="montoOferta" 
            min="<%= remate.precios %>" 
            step="100"
            required
            placeholder="Ingrese su oferta"
          >
          <button type="submit" class="btn-offer">Enviar Oferta</button>
        </div>
      </form>
    </div>
  
    <div class="auction-details">
      <p>Inicio: <%= moment(remate.fecha_activacion).format('DD/MM/YYYY') %> <%= remate.hora_activacion %></p>
      <p>Remate: <%= moment(remate.fecha_remate).format('DD/MM/YYYY') %> <%= remate.hora_remate %></p>
    </div>
  </div>