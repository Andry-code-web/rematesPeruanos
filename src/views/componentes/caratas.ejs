    <script>
        function iniciarContadorRegresivo(duracion) {
            let tiempoRestante = duracion;

            const intervalo = setInterval(() => {
                const horas = String(Math.floor(tiempoRestante / 3600)).padStart(2, '0');
                const minutos = String(Math.floor((tiempoRestante % 3600) / 60)).padStart(2, '0');
                const segundos = String(tiempoRestante % 60).padStart(2, '0');

                document.getElementById('tiempo').textContent = `${horas}:${minutos}:${segundos}`;

                if (tiempoRestante <= 0) {
                    clearInterval(intervalo);
                } else {
                    tiempoRestante--;
                }
            }, 1000);
        }

        iniciarContadorRegresivo(60);

    </script>
